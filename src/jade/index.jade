					img(src="img/diw-hero-2.gif")
					div#preloadingSlide
				div.heroProject#heroProject4
					div.bg#bg1
					div.bg#bg2
					div.bg#bg3
					div.heroTextContainer
						h2 UX Researches & Observations
						div.underline
						h1 Loving to learn
					img(src="img/ux-research-hero.png")
					div.mainHeroCTA.hover
						a(href="/blog" target="_blank") View Blog
					div#preloadingSlide
				div.heroProject#heroProject5
					div.heroTextContainer
						h2 Experimental Designs
						h2.myTitle Sometimes, it may not appear to be practical...
						div.underline
						h1 Havin' Fun in Design
					img(src="img/AR-2.gif")
